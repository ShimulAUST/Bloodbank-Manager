<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#531a0a"
    android:padding="10dp"
    tools:context=".DashBoardActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DashBoard"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#FFF"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name :"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFF"
            />
        <TextView
            android:id="@+id/pro_fname"
            android:textColor="#FFF"
            android:textSize="15dp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name :"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFF"
            />
        <TextView
            android:id="@+id/pro_lname"
            android:textColor="#FFF"
            android:textSize="15dp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFF"
            />
        <TextView
            android:id="@+id/pro_gender"
            android:textColor="#FFF"
            android:textSize="15dp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Group:"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFF"
            />
        <TextView
            android:id="@+id/pro_blood_group"
            android:layout_width="wrap_content"
            android:textColor="#FFF"
            android:textSize="15dp"
            android:text=""
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth:"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFF"
            />
        <TextView
            android:id="@+id/pro_date"
            android:layout_width="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:textColor="#FFF"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="District:"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFF"
            />
        <TextView
            android:id="@+id/pro_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text=""
            android:textColor="#FFF"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFF"
            />
        <TextView
            android:id="@+id/pro_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text=""
            android:textSize="15dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFF"
            />
        <TextView
            android:id="@+id/pro_email"
            android:layout_width="wrap_content"
            android:textColor="#FFF"
            android:textSize="15dp"
            android:text=""
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone No:"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFF"
            />
        <TextView
            android:id="@+id/pro_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#FFF"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFF"
            />
        <TextView
            android:id="@+id/pro_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:textColor="#FFF"
            />

    </LinearLayout>
    <Button
        android:id="@+id/button_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0f0f8e"
        android:textColor="#fff"
        android:text="UPDATE"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="150dp"
        />


</LinearLayout>